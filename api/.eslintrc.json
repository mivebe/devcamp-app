{
  "extends": ["airbnb-base", "prettier", "plugin:mocha/recommended"],
  "plugins": ["prettier"],
  "rules": {
    "no-unused-vars": "warn",
    "strict": "off",
    "import/no-dynamic-require": "off",
    "global-require": "off",
    "class-methods-use-this": "off"
  },

  "overrides": [
    {
      "files": ["*.js"],
      "excludedFiles": "*.js",
      "rules": {
        "quotes": [2, "single"]
      }
    }
  ]
}
